{
  "name": "Chromaural",
  "version": "0.0.1",
  "description": "Deconstruct harmony",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "dev": "rimraf dist && cross-env NODE_ENV=development webpack --watch --progress --colors",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --progress --colors",
    "publish": "npm run build && gh-pages -d dist/ --dotfiles ",
    "postinstall": "electron-rebuild",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register \"test/**/*.ts\"",
    "build:win": "electron-builder build --win --x64",
    "build:mac": "electron-builder build --mac --x64"
  },
  "build": {
    "appId": "com.cactice.chromaural",
    "productName": "chromaural",
    "directories": {
      "app": "./dist/",
      "output": "./out/"
    },
    "mac": {
      "target": "pkg"
    },
    "win": {
      "target": "nsis",
      "asar": false
    },
    "buildVersion": "1.0.0"
  },
  "author": "Wing Chau @Devtography",
  "license": "MIT",
  "dependencies": {
    "@types/node-hid": "^1.2.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "bulma": "^0.9.0",
    "bulma-stylus": "^0.8.1-rc.2",
    "glslify-loader": "^2.0.0",
    "midi-player-js": "^2.0.13",
    "node-hid": "^1.2.0",
    "raw-loader": "^4.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-jsx": "^3.3.0",
    "url-loader": "^4.1.0",
    "webmidi": "^2.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@types/chrome": "0.0.124",
    "@types/mocha": "^5.2.7",
    "@types/react-router": "^4.4.5",
    "@types/react-router-dom": "^4.3.5",
    "@types/styled-jsx": "^2.2.8",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "acorn": "^6.4.1",
    "ajv": "^6.12.4",
    "babel-loader": "^8.1.0",
