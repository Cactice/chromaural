
.tags
    align-items center
    display flex
    flex-wrap wrap
    justify-content flex-start
    .tag
        margin-bottom 0.5rem
        &:not(:last-child)
            margin-right 0.5rem
    &:last-child
        margin-bottom -0.5rem
    &:not(:last-child)
        margin-bottom 1rem
    &.are-medium
        .tag
            &:not(.is-normal):not(.is-large)
                font-size 1rem
    &.are-large
        .tag
            &:not(.is-normal):not(.is-medium)
                font-size 1.25rem
    &.is-centered
        justify-content center
        .tag
            margin-right 0.25rem
            margin-left 0.25rem
    &.is-right
        justify-content flex-end
        .tag
            &:not(:first-child)
                margin-left 0.5rem
            &:not(:last-child)
                margin-right 0
    &.has-addons
        .tag
            margin-right 0
            &:not(:first-child)
                margin-left 0
                border-top-left-radius 0
                border-bottom-left-radius 0
            &:not(:last-child)
                border-top-right-radius 0
                border-bottom-right-radius 0

.tag
    &:not(body)
        align-items center
        background-color whitesmoke
        border-radius 4px
        color #4a4a4a
        display inline-flex
        font-size 0.75rem
        height 2em
        justify-content center
        line-height 1.5
        padding-left 0.75em
        padding-right 0.75em
        white-space nowrap
        .delete
            margin-left 0.25rem
            margin-right -0.375rem
        .icon
            &:first-child
                &:not(:last-child)
                    margin-left -0.375em
                    margin-right 0.1875em
                &:last-child
                    margin-left -0.375em
                    margin-right -0.375em
            &:last-child
                &:not(:first-child)
                    margin-left 0.1875em
                    margin-right -0.375em
    &:not(body).is-white
        background-color white
        color #0a0a0a
    &:not(body).is-black
        background-color #0a0a0a
        color white
    &:not(body).is-light
        background-color whitesmoke
        color rgba(0, 0, 0, 0.7)
    &:not(body).is-dark
        background-color #363636
        color #fff
    &:not(body).is-primary
        background-color #00d1b2
        color #fff
        &.is-light
            background-color #ebfffc
            color #00947e
    &:not(body).is-link
        background-color #3273dc
        color #fff
        &.is-light
            background-color #eef3fc
            color #2160c4
    &:not(body).is-info
        background-color #3298dc
        color #fff
        &.is-light
            background-color #eef6fc
            color #1d72aa
    &:not(body).is-success
        background-color #48c774
        color #fff
        &.is-light
            background-color #effaf3
            color #257942
    &:not(body).is-warning
        background-color #ffdd57
        color rgba(0, 0, 0, 0.7)
        &.is-light
            background-color #fffbeb
            color #947600
    &:not(body).is-danger
        background-color #f14668
        color #fff
        &.is-light
            background-color #feecf0
            color #cc0f35
    &:not(body).is-normal
        font-size 0.75rem
    &:not(body).is-medium
        font-size 1rem
    &:not(body).is-large
        font-size 1.25rem
    &:not(body).is-delete
        margin-left 1px
        padding 0
        position relative
        width 2em
        &::before
            height 1px
            width 50%
        &::after
            height 50%
            width 1px
        &:active
            background-color #dbdbdb
    &:not(body).is-rounded
        border-radius 290486px

.tag:not(body).is-delete::before, .tag:not(body).is-delete::after
    background-color currentColor
    content ""
    display block
    left 50%
    position absolute
    top 50%
    transform translateX(-50%) translateY(-50%) rotate(45deg)
    transform-origin center center

.tag:not(body).is-delete:hover, .tag:not(body).is-delete:focus
    background-color #e8e8e8

a
    &.tag
        &:hover
            text-decoration underline

.title,
.subtitle
    word-break break-word

.title em,
.title span,
.subtitle em,
.subtitle span
    font-weight inherit

.title sub,
.subtitle sub
    font-size 0.75em

.title sup,
.subtitle sup
    font-size 0.75em

.title .tag,
.subtitle .tag
    vertical-align middle